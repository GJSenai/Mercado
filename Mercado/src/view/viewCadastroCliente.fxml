<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<!-- 
  Este é o contêiner principal para a janela de cadastro.
  Projetado para ser um popup (modal).
-->

<AnchorPane prefHeight="600.0" prefWidth="700.0" style="-fx-background-color: #FFFFFF; -fx-border-color: #D3D3D3; -fx-border-width: 1;" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.controllerCadastroClientes">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="700.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
         </padding>
         <children>
            <!-- ==================== CABEÇALHO ==================== -->
            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="CADASTRO DE CLIENTE">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Text>
                  <Label alignment="CENTER" prefHeight="35.0" prefWidth="640.0" style="-fx-background-color: #1546a0; -fx-background-radius: 8;" text="CADASTRO/EDIÇÃO DE CLIENTES" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#29c8fd" height="4.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="640.0" />
               </children>
            </VBox>

            <!-- ==================== CAMPOS DO FORMULÁRIO ==================== -->
            <VBox spacing="15.0" VBox.vgrow="ALWAYS">
               <children>
                  <!-- Linha 1: Nome e CPF -->
                  <HBox spacing="30.0">
                     <children>
                        <VBox prefWidth="305.0" spacing="5.0">
                           <children>
                              <Label text="Nome">
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtNome" prefHeight="40.0" promptText="Ex: Name Surname" style="-fx-background-color: #f0f8ff; -fx-background-radius: 20; -fx-border-color: #ddebf7; -fx-border-radius: 20;" />
                           </children>
                        </VBox>
                        <VBox prefWidth="305.0" spacing="5.0">
                           <children>
                              <Label text="CPF">
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtCpf" prefHeight="40.0" promptText="###.###.###-##" style="-fx-background-color: #f0f8ff; -fx-background-radius: 20; -fx-border-color: #ddebf7; -fx-border-radius: 20;" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <!-- Linha 2: Data de Nascimento e E-mail -->
                  <HBox spacing="30.0">
                     <children>
                        <VBox prefWidth="305.0" spacing="5.0">
                           <children>
                              <Label text="Data de Nascimento">
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Label>
                              <DatePicker fx:id="txtDataNasc" prefHeight="40.0" prefWidth="179.0" style="-fx-background-color: #f0f8ff; -fx-background-radius: 20; -fx-border-color: #ddebf7; -fx-border-radius: 20;" />
                           </children>
                        </VBox>
                        <VBox prefWidth="305.0" spacing="5.0">
                           <children>
                              <Label text="E-mail">
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtEmail" prefHeight="40.0" promptText="Ex: example@example.com" style="-fx-background-color: #f0f8ff; -fx-background-radius: 20; -fx-border-color: #ddebf7; -fx-border-radius: 20;" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <!-- Linha 3: Telefone -->
                  <VBox prefWidth="305.0" spacing="5.0">
                     <children>
                        <Label text="Telefone">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtTelefone" prefHeight="40.0" promptText="Ex: 00 00000-0000" style="-fx-background-color: #f0f8ff; -fx-background-radius: 20; -fx-border-color: #ddebf7; -fx-border-radius: 20;" />
                     </children>
                  </VBox>
                  <!-- Linha 4: Endereço -->
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Endereço">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtEndereco" prefHeight="40.0" promptText="Ex: Name Street ,number" style="-fx-background-color: #f0f8ff; -fx-background-radius: 20; -fx-border-color: #ddebf7; -fx-border-radius: 20;" />
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </VBox>

            <!-- ==================== BOTÕES DE AÇÃO ==================== -->
            <HBox alignment="CENTER" spacing="30.0">
               <children>
                  <Button fx:id="btSalvar" mnemonicParsing="false" onAction="#actionSalvar" prefHeight="45.0" prefWidth="160.0" text="Salvar" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                     <graphic>
                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="📝" />
                     </graphic>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button fx:id="btCancelar" mnemonicParsing="false" onAction="#actionCancelar" prefHeight="45.0" prefWidth="160.0" text="Cancelar" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                     <graphic>
                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="❌" />
                     </graphic>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            
            <!-- Linha azul final -->
            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#29c8fd" height="4.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="640.0" />
         </children>
      </VBox>
   </children>
</AnchorPane>
