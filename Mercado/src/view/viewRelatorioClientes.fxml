<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefWidth="1080.0" prefHeight="720.0" style="-fx-background-color: white;">
    <!-- Painel Lateral Esquerda -->
    <AnchorPane prefWidth="300.0" layoutX="0" layoutY="0" style="-fx-background-color: #113785;">
        <!-- Carrinho (use um ImageView com o ícone real se tiver, aqui um Label como exemplo) -->
        <Label layoutX="70" layoutY="55" text="🛒" style="-fx-font-size: 80;" />
        <Label layoutX="80" layoutY="170" text="Usuário:\nGildomar Junior" style="-fx-text-fill: white; -fx-font-size: 15;" />
        
        <!-- Botões Menu -->
        <Button text="REGISTRAR VENDA" layoutX="50" layoutY="230" prefWidth="200" style="-fx-background-color: #15e1f5; -fx-font-size: 15; -fx-font-weight: bold; -fx-text-fill: white;" />
        <Button text="HOME" layoutX="50" layoutY="280" prefWidth="200" style="-fx-background-color: #15e1f5; -fx-font-size: 15; -fx-font-weight: bold; -fx-text-fill: white;" />
        <Button text="CLIENTES" layoutX="50" layoutY="330" prefWidth="200" style="-fx-background-color: #26477b; -fx-font-size: 15; -fx-font-weight: bold; -fx-text-fill: white;" />
        <Button text="PRODUTOS" layoutX="50" layoutY="380" prefWidth="200" style="-fx-background-color: #15e1f5; -fx-font-size: 15; -fx-font-weight: bold; -fx-text-fill: white;" />
        <Button text="FUNCIONARIOS" layoutX="50" layoutY="430" prefWidth="200" style="-fx-background-color: #15e1f5; -fx-font-size: 15; -fx-font-weight: bold; -fx-text-fill: white;" />
        <Button text="VENDAS" layoutX="50" layoutY="480" prefWidth="200" style="-fx-background-color: #15e1f5; -fx-font-size: 15; -fx-font-weight: bold; -fx-text-fill: white;" />
        <Button text="SAIR" layoutX="50" layoutY="600" prefWidth="200" style="-fx-background-color: #002188; -fx-font-size: 15; -fx-font-weight: bold; -fx-text-fill: white;" />
        
        <!-- Linha vertical separadora -->
        <Rectangle layoutX="295" layoutY="30" width="5" height="650" fill="#15e1f5"/>
    </AnchorPane>
    
    <!-- Área Direita -->
    <!-- Título -->
    <Label text="CLIENTES" layoutX="340" layoutY="30" style="-fx-font-size: 18; -fx-font-weight: bold;" />
    <Separator layoutX="340" layoutY="60" prefWidth="700" />
    
    <!-- RELATÓRIO DE CLIENTES -->
    <Label text="REALATORIO DE CLIENTES" layoutX="360" layoutY="80"
        style="-fx-font-size: 16; -fx-background-color: #113785; -fx-text-fill: white; -fx-padding: 6 24 6 24; -fx-background-radius: 4;" />
    <Separator layoutX="340" layoutY="110" prefWidth="700" />
    
    <!-- Campo de busca e botão Pesquisa -->
    <TextField layoutX="360" layoutY="130" prefWidth="420" promptText="Insira CPF ou Nome" />
    <Button layoutX="800" layoutY="130" prefWidth="100" text="Pesquisa" style="-fx-background-color: #15e1f5; -fx-font-size: 15; -fx-font-weight: bold; -fx-text-fill: white;" >
        <graphic>
            <Label text="🔍" style="-fx-font-size: 18;" />
        </graphic>
    </Button>
    
    <!-- Botões: Cadastrar, Editar, Excluir -->
    <Button layoutX="540" layoutY="180" prefWidth="110" text="Cadastra" style="-fx-background-color: #15e1f5; -fx-font-size: 15; -fx-font-weight: bold; -fx-text-fill: white;">
        <graphic>
            <Label text="📝" style="-fx-font-size: 18;" />
        </graphic>
    </Button>
    <Button layoutX="670" layoutY="180" prefWidth="90" text="Editar" style="-fx-background-color: #15e1f5; -fx-font-size: 15; -fx-font-weight: bold; -fx-text-fill: white;">
        <graphic>
            <Label text="✏️" style="-fx-font-size: 18;" />
        </graphic>
    </Button>
    <Button layoutX="780" layoutY="180" prefWidth="90" text="Excluir" style="-fx-background-color: #002188; -fx-font-size: 15; -fx-font-weight: bold; -fx-text-fill: white;">
        <graphic>
            <Label text="🗑️" style="-fx-font-size: 18;" />
        </graphic>
    </Button>
    
    <!-- TableView -->
    <TableView layoutX="360" layoutY="240" prefWidth="670" prefHeight="340">
        <columns>
            <TableColumn text="CPF" prefWidth="150"/>
            <TableColumn text="Nome" prefWidth="220"/>
            <TableColumn text="Telefone" prefWidth="150"/>
            <TableColumn text="Endereço" prefWidth="150"/>
        </columns>
    </TableView>
    
    <!-- Linha horizontal inferior -->
    <Separator layoutX="340" layoutY="600" prefWidth="700"/>
</AnchorPane>


