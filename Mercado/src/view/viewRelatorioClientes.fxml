                      <TableColumn fx:id="columnIndice" prefWidth="50.0" text="ID" />
                      <TableColumn fx:id="columnNome" prefWidth="198.39993286132812" text="Nome" />
                      <TableColumn fx:id="columnCpf" prefWidth="98.4000244140625" text="CPF" />
