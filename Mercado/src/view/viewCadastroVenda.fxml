<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="720.0" prefWidth="800.0" style="-fx-background-color: #FFFFFF; -fx-border-color: #D3D3D3; -fx-border-width: 1;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ControllerVenda">
   <children>
      <VBox alignment="TOP_CENTER" spacing="12.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
         </padding>
         <children>
            <!-- ==================== CABEÇALHO ==================== -->
            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Vendas">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Text>
                  <Label fx:id="lblNumeroVenda" alignment="CENTER" prefHeight="35.0" prefWidth="740.0" style="-fx-background-color: #1546a0; -fx-background-radius: 8;" text="Venda Nº 01" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#29c8fd" height="3.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="740.0" />
               </children>
            </VBox>

            <!-- ==================== DADOS DO CLIENTE E VENDEDOR ==================== -->
            <HBox spacing="30.0">
               <children>
                  <VBox prefWidth="345.0" spacing="5.0">
                     <children>
                        <Label text="Cliente">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtCliente" prefHeight="40.0" promptText="Ex: Name Surname" style="-fx-background-color: #f0f8ff; -fx-background-radius: 20; -fx-border-color: #ddebf7; -fx-border-radius: 20;" />
                     </children>
                  </VBox>
                  <VBox prefWidth="345.0" spacing="5.0">
                     <children>
                        <Label text="CPF">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtCpf" prefHeight="40.0" promptText="###.###.###-##" style="-fx-background-color: #f0f8ff; -fx-background-radius: 20; -fx-border-color: #ddebf7; -fx-border-radius: 20;" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <VBox spacing="5.0">
               <children>
                  <Label text="Vendedor">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtVendedor" prefHeight="40.0" promptText="Ex: Name Surname" style="-fx-background-color: #f0f8ff; -fx-background-radius: 20; -fx-border-color: #ddebf7; -fx-border-radius: 20;" />
               </children>
            </VBox>
             <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#29c8fd" height="3.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="740.0" />

            <!-- ==================== ADICIONAR PRODUTO ==================== -->
            <VBox spacing="10.0">
               <children>
                  <HBox alignment="BOTTOM_LEFT" spacing="20.0">
                     <children>
                        <VBox HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Produto">
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtProduto" prefHeight="40.0" style="-fx-background-color: #f0f8ff; -fx-background-radius: 20; -fx-border-color: #ddebf7; -fx-border-radius: 20;" />
                           </children>
                        </VBox>
                        <Button fx:id="btAdicionar" onAction="#actionAdicionar" mnemonicParsing="false" prefHeight="40.0" prefWidth="130.0" style="-fx-background-color: #29c8fd; -fx-background-radius: 20;" text="Adicionar" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
                  <HBox spacing="15.0">
                     <children>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Quatidade">
                                 <font><Font name="System Bold" size="14.0" /></font>
                              </Label>
                              <TextField fx:id="txtQuantidade" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #f0f8ff; -fx-background-radius: 20; -fx-border-color: #ddebf7; -fx-border-radius: 20;" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Tipo UN">
                                 <font><Font name="System Bold" size="14.0" /></font>
                              </Label>
                              <TextField fx:id="txtTipoUn" editable="false" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #e9e9e9; -fx-background-radius: 20; -fx-border-color: #ddebf7; -fx-border-radius: 20;" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Preço UN">
                                 <font><Font name="System Bold" size="14.0" /></font>
                              </Label>
                              <TextField fx:id="txtPrecoUn" editable="false" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #e9e9e9; -fx-background-radius: 20; -fx-border-color: #ddebf7; -fx-border-radius: 20;" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Desconto %">
                                 <font><Font name="System Bold" size="14.0" /></font>
                              </Label>
                              <TextField fx:id="txtDesconto" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #f0f8ff; -fx-background-radius: 20; -fx-border-color: #ddebf7; -fx-border-radius: 20;" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>

            <!-- ==================== TABELA DE ITENS DA VENDA ==================== -->
            <TableView fx:id="tableItensVenda" prefHeight="200.0" style="-fx-border-color: #4a7fc9; -fx-border-radius: 8; -fx-background-color: #e5f1ff;" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colItem" prefWidth="50.0" text="Item" />
                <TableColumn fx:id="colProduto" prefWidth="250.0" text="Produto" />
                  <TableColumn fx:id="colQtd" prefWidth="80.0" text="Qtd." />
                  <TableColumn fx:id="colPreco" prefWidth="120.0" text="Preço UN" />
                  <TableColumn fx:id="colDesconto" prefWidth="100.0" text="Desconto" />
                  <TableColumn fx:id="colSubtotal" prefWidth="138.0" text="Subtotal" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            
            <!-- ==================== FINALIZAÇÃO E TOTAL ==================== -->
            <HBox alignment="BOTTOM_RIGHT" spacing="40.0">
               <children>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Forma de pagamento">
                           <font><Font name="System Bold" size="16.0" /></font>
                        </Label>
                        <ComboBox fx:id="comboFormaPagamento" prefHeight="40.0" prefWidth="220.0" style="-fx-background-color: #f0f8ff; -fx-background-radius: 20; -fx-border-color: #ddebf7; -fx-border-radius: 20;" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Total da Compra">
                           <font><Font name="System Bold" size="16.0" /></font>
                        </Label>
                        <TextField fx:id="txtTotalCompra" editable="false" prefHeight="40.0" prefWidth="220.0" style="-fx-background-color: #e9e9e9; -fx-font-weight: bold; -fx-background-radius: 20; -fx-border-color: #ddebf7; -fx-border-radius: 20; -fx-font-size: 16;">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </TextField>
                     </children>
                  </VBox>
               </children>
            </HBox>
            
            <VBox alignment="CENTER" spacing="15.0">
               <children>
                   <!-- ==================== BOTÕES DE AÇÃO ==================== -->
                  <HBox alignment="CENTER" spacing="30.0">
                     <children>
                        <Button fx:id="btRegistrar" onAction="#actionRegistrar" mnemonicParsing="false" prefHeight="45.0" prefWidth="160.0" style="-fx-background-color: #29c8fd; -fx-background-radius: 25;" text="Registrar" textFill="WHITE">
                           <font><Font name="System Bold" size="18.0" /></font>
                           <graphic>
                              <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="🧾" />
                           </graphic>
                        </Button>
                        <Button fx:id="btCancelar" onAction="#actionCancelar" mnemonicParsing="false" prefHeight="45.0" prefWidth="160.0" style="-fx-background-color: #02175d; -fx-background-radius: 25;" text="Cancelar" textFill="WHITE">
                           <font><Font name="System Bold" size="18.0" /></font>
                           <graphic>
                              <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="❌" />
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
                  <!-- Linha azul final -->
                  <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#29c8fd" height="3.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="740.0" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>