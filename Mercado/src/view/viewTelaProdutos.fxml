<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>

<AnchorPane maxHeight="720.0" maxWidth="1080.0" minHeight="720.0" minWidth="1080.0" prefHeight="720.0" prefWidth="1080.0" style="-fx-background-radius: 15;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <SplitPane dividerPositions="0.26" prefHeight="720.0" prefWidth="1080.0">
            <items>
                <!-- SIDEBAR -->
                <AnchorPane prefWidth="280.0" style="-fx-background-color: #144FAD; -fx-background-radius: 15 0 0 15;">
                    <children>
                        <VBox alignment="TOP_CENTER" prefWidth="280.0" spacing="22.0">
                            <children>
                                <!-- Ícone Carrinho -->
                                <Text fill="WHITE" style="-fx-font-size: 96px;" text="🛒" />
                                <!-- Usuário -->
                                <VBox alignment="CENTER" spacing="4.0">
                                    <children>
                                        <Text fill="WHITE" style="-fx-font-size: 16px;" text="Usuário:" />
                                        <Text fx:id="txtUser" fill="WHITE" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Gildomar Junior" />
                                    </children>
                                </VBox>
                                <!-- Botões -->
                                <VBox alignment="CENTER" spacing="16.0">
                                    <children>
                                        <Button fx:id="btRegistrarVenda" prefHeight="40" prefWidth="200" style="-fx-background-color: #29c8fd; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 12;" text="REGISTRAR VENDA" />
                                        <Button fx:id="btHome" prefHeight="40" prefWidth="200" style="-fx-background-color: #29c8fd; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 12;" text="HOME" />
                                        <Button fx:id="btClientes" prefHeight="40" prefWidth="200" style="-fx-background-color: #29c8fd; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 12;" text="CLIENTES" />
                                        <Button fx:id="btProdutos" prefHeight="40" prefWidth="200" style="-fx-background-color: #29c8fd; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 12;" text="PRODUTOS" />
                                        <Button fx:id="btFuncionarios" prefHeight="40" prefWidth="200" style="-fx-background-color: #29c8fd; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 12;" text="FUNCIONARIOS" />
                                        <Button fx:id="btVendas" prefHeight="40" prefWidth="200" style="-fx-background-color: #29c8fd; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 12;" text="VENDAS" />
                                    </children>
                                </VBox>
                                <!-- Linha divisória -->
                                <Rectangle arcHeight="5" arcWidth="5" fill="#29c8fd" height="4" width="180" />
                                <!-- Botão Sair -->
                                <Button fx:id="btSair" prefHeight="36" prefWidth="140" style="-fx-background-color: #050d81; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 10;" text="SAIR" />
                            </children>
                            <padding>
                                <Insets bottom="22" left="22" right="22" top="22" />
                            </padding>
                        </VBox>
                    </children>
                </AnchorPane>
                <!-- ÁREA PRINCIPAL -->
                <AnchorPane style="-fx-background-color: #fff; -fx-background-radius: 0 15 15 0;">
                    <children>
                        <VBox alignment="TOP_LEFT" prefWidth="780.0" spacing="10.0">
                            <children>
                                <!-- Título -->
                                <Text style="-fx-font-size: 20px; -fx-font-weight: bold;" text="PRODUTOS" />
                                <!-- Subtítulo -->
                                <HBox alignment="CENTER_LEFT" spacing="6.0">
                                    <children>
                                        <Rectangle fill="#29c8fd" height="28.0" width="7.0" />
                                        <Text style="-fx-font-size: 17px; -fx-font-family: 'Lucida Console'; -fx-font-weight: bold; -fx-fill: #003366;" text="RELATÓRIO DE PRODUTOS" />
                                    </children>
                                </HBox>
                                <!-- Linha azul clara -->
                                <Rectangle arcHeight="8" arcWidth="8" fill="#29c8fd" height="3.0" width="730.0" />
                                <!-- Barra de pesquisa e botões -->
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <TextField fx:id="txtPesquisa" prefWidth="330" promptText="Insira  COD. de Barra ou Nome" style="-fx-background-radius: 18; -fx-font-size: 15px;" />
                                        <Button fx:id="btPesquisar" prefHeight="36" prefWidth="36" style="-fx-background-radius: 18; -fx-background-color: #29c8fd; -fx-text-fill: white;" text="🔍" />
                                        <Button fx:id="btPesquisa" prefHeight="36" style="-fx-background-radius: 18; -fx-background-color: #0529cb; -fx-text-fill: white; -fx-font-size: 14px;" text="Pesquisa" />
                                        <Pane minWidth="40" />
                                        <Button fx:id="btCadastrar" prefHeight="36" style="-fx-background-radius: 18; -fx-background-color: #29c8fd; -fx-text-fill: white; -fx-font-size: 14px;" text="🗒️ Cadastra" />
                                        <Button fx:id="btEditar" prefHeight="36" style="-fx-background-radius: 18; -fx-background-color: #29c8fd; -fx-text-fill: white; -fx-font-size: 14px;" text="✏️ Editar" />
                                        <Button fx:id="btExcluir" prefHeight="36" style="-fx-background-radius: 18; -fx-background-color: #050d81; -fx-text-fill: white; -fx-font-size: 14px;" text="🗑️ Excluir" />
                                    </children>
                                    <padding>
                                        <Insets bottom="8" left="0" right="0" top="8" />
                                    </padding>
                                </HBox>
                                <!-- Tabela de produtos -->
                                <TableView fx:id="tableProdutos" prefHeight="350.0" prefWidth="730.0" style="-fx-background-radius: 12; -fx-border-color: #29c8fd; -fx-border-width: 2;">
                                    <columns>
                                        <TableColumn fx:id="colCod" prefWidth="100" text="Código" />
                                        <TableColumn fx:id="colNome" prefWidth="200" text="Nome do Produto" />
                                        <TableColumn fx:id="colCategoria" prefWidth="150" text="Categoria" />
                                        <TableColumn fx:id="colEstoque" prefWidth="100" text="Estoque" />
                                        <TableColumn fx:id="colPreco" prefWidth="100" text="Preço" />
                                        <TableColumn fx:id="colValidade" prefWidth="80" text="Validade" />
                                    </columns>
                                </TableView>
                                <!-- Linha azul clara inferior -->
                                <Rectangle arcHeight="8" arcWidth="8" fill="#29c8fd" height="3.0" width="730.0" />
                            </children>
                            <padding>
                                <Insets bottom="18" left="22" right="22" top="22" />
                            </padding>
                        </VBox>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</AnchorPane>
